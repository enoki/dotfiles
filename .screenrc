# ~/.screenrc
bind j focus down
bind ^j focus down
bind k focus up
bind ^k focus up
# # Focus
bind f resize max
bind ^f resize max
# # Refocus
bind r resize =
bind ^r resize =
# Split
bind v split
bind s split
#
vbell off
startup_message off
#
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.gW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d"
